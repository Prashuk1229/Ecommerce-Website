<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <% if(errorMessage) {%>
                <div class="user-message user-message--error">
                    <%=errorMessage%>
                </div>
                <% }%>

                    <main>
                        <form class="login-form" action="/signup" method="POST" novalidate>
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <div class="form-control">
                                <label for="email">E-Mail</label>
                                <input <% if(validationErrors.reduce((b , v)=> b+= (v.path === 'email') , (0))) {%>
                                style = "background-color: rgb(255, 128, 128);"
                                <%}%>
                                    type="email" name="email" id="email" value = "<%= oldInput.email%>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input <% if(validationErrors.reduce((b , v)=> b+= (v.path === 'password') , (0))) {%>
                                style = "background-color: rgb(255, 128, 128);"
                                <%}%>
                                    type="password" name="password" id="password" value = "<%= oldInput.password%>">
                            </div>
                            <div class="form-control">
                                <label for="confirmPassword">Confirm Password</label>
                                <input <% if(validationErrors.reduce((b , v)=> b+= (v.path === 'confirmPassword') ,
                                (0))) {%>
                                style = "background-color: rgb(255, 128, 128);"
                                <%}%>
                                    type="password" name="confirmPassword" id="confirmPassword" value = "<%=
                                        oldInput.confirmPassword%>">
                            </div>
                            <button class="btn" type="submit">Signup</button>
                        </form>
                    </main>
                    <%- include('../includes/end.ejs') %>